<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppTheme.PerformToRec" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:colorAccent">@color/performToRec</item>
        <item name="android:colorButtonNormal">@color/disablePerformToRec</item>
        <item name="android:textColor">@color/whiteText</item>
    </style>

    <style name="AppTheme.Preset" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:colorAccent">@color/firstcolumn</item>
        <item name="android:colorButtonNormal">@color/disablePreset</item>
        <item name="android:textColor">@color/whiteText</item>
    </style>

    <style name="AppTheme.Perform" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:colorAccent">@color/activePerform</item>
        <item name="android:colorButtonNormal">@color/disablePerform</item>
        <item name="android:textColor">@color/whiteText</item>
    </style>


</resources>
